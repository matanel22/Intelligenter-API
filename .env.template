# Environment Configuration Template for Docker
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration (for Docker Compose)
# The compose file uses the postgres service name as the DB host
POSTGRES_DB=intelligenter_api
DB_USER=postgres
DB_PASSWORD=YOUR_POSTGRES_PASSWORD_HERE
DB_HOST=postgres
DB_PORT=5432
DB_NAME=intelligenter_api

# Redis Configuration (for Docker Compose)
REDIS_HOST=redis
REDIS_PORT=6379

# App / API
API_VERSION=v1
JWT_SECRET=your_jwt_secret_here

# External Services (Optional)
# ANALYSIS_SERVICE_URL=http://localhost:8080
# MONITORING_API_KEY=your-monitoring-key-here